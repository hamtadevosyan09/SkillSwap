<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_blue"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="70dp"
        android:paddingBottom="80dp">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:maxWidth="600dp"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Math resources for our users"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/geometrySection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Geometry"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:padding="16dp"
                    android:layout_marginBottom="18dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/rounded_button_geometry"
                    android:elevation="4dp"
                    android:shadowColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/numberTheorySection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number Theory"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:padding="16dp"
                    android:layout_marginBottom="18dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/rounded_button_numbertheory"
                    android:elevation="4dp"
                    android:shadowColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/algebraSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Algebra"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:padding="16dp"
                    android:layout_marginBottom="18dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/rounded_button_algebra"
                    android:elevation="4dp"
                    android:shadowColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/combinatoricsSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Combinatorics"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:padding="16dp"
                    android:layout_marginBottom="18dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/rounded_button_combinatorics"
                    android:elevation="4dp"
                    android:shadowColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/websitesSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Math websites"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:padding="16dp"
                    android:layout_marginBottom="18dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/rounded_button_websites"
                    android:elevation="4dp"
                    android:shadowColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</androidx.core.widget.NestedScrollView>
