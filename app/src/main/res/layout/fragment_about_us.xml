<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:background="@color/light_gray_blue"
    tools:context=".AboutUsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp">

        <TextView
            android:id="@+id/about_us_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="70dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/about_us_description"
            android:layout_width="0dp"
            android:textColor="@color/grey"
            android:layout_height="wrap_content"
            android:text="Welcome to our SolveStack App, where you can ask math questions, share solutions, and interact with a community of learners! Our goal is to help you solve math problems efficiently and effectively, while providing an AI Assistant for any assistance you might need."
            android:textSize="18sp"
            android:lineSpacingExtra="8dp"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/about_us_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/contact_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/about_us_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/contact_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="For any inquiries, please contact us at: tadevosyanhamlet09@gmail.com"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/contact_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/mission_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Mission"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/contact_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/mission_statement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="Our mission is to provide a user-friendly platform for people to collaborate on solving math problems and enhance their learning with AI-powered assistance."
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/mission_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>